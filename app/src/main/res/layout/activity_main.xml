<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5F5"
    >

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="Pemesanan Tiket Kereta"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Username Field -->
    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Pemesan"
        android:drawableStart="@drawable/user"
        android:padding="16dp"
        android:background="@drawable/background"
        android:layout_marginBottom="16dp"
        android:drawablePadding="10dp"

        />

    <!-- Email Field -->
    <EditText
        android:id="@+id/jam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jam Keberangkatan"
        android:drawableStart="@drawable/clock"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:background="@drawable/background"
        android:layout_marginBottom="16dp"
        android:drawablePadding="10dp"

        />

    <!-- Phone Field -->
    <EditText
        android:id="@+id/tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pilih Tanggal Keberangkatan"
        android:drawableStart="@drawable/tanggal"
        android:inputType="phone"
        android:padding="16dp"
        android:background="@drawable/background"
        android:layout_marginBottom="16dp"
        android:drawablePadding="10dp"
        />

    <Spinner
        android:id="@+id/tujuan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Tujuan"
        android:drawableStart="@drawable/lokasi"
        android:background="@drawable/background"
        android:layout_marginBottom="16dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/Ptiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan Tiket"
        android:backgroundTint="@color/blue"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"/>

</LinearLayout>